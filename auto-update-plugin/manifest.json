{
  "manifest_version": 3,
  "name": "自动更新测试插件",
  "description": "测试自动更新",
  "version": "5.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms", "activeTab", "scripting", "tabs", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["scripts/inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://www.cnblogs.com/*",
    "http://localhost/*",
    "https://juejin.cn/*"
  ],
  "update_url": "https://auto-update-chrome-plugin-1.pages.dev/auto-update-server/extension-updates.xml"
}
